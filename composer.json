{
  "name": "brianhenryie/php-codecoverage-markdown",
  "description": "Generate markdown coverage reports from PHPUnit code coverage data for GitHub PR comments",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "BrianHenryIE",
      "email": "BrianHenryIE@gmail.com"
    }
  ],
  "keywords": ["code-coverage", "phpunit", "markdown", "github-actions", "testing"],
  "bin": [
    "bin/php-codecoverage-markdown"
  ],
  "autoload":{
    "psr-4": {
      "BrianHenryIE\\CodeCoverageMarkdown\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BrianHenryIE\\CodeCoverageMarkdown\\": "tests/unit"
    },
    "classmap": [
      "tests"
    ]
  },
  "require": {
    "php": ">=7.4",
    "phpunit/php-code-coverage": "^9|^10|^11|^12",
    "phpunit/php-text-template": "^2.0|^3.0|^4.0",
    "symfony/console": "^5|^6|^7"
  },
  "require-dev": {
    "mockery/mockery": "*",
    "phpstan/phpstan": "*",
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "analyze": [
      "phpstan analyse --memory-limit=-1 --verbose"
    ],
    "cs-fix": [
      "phpcbf || true",
      "@cs"
    ],
    "cs": [
      "phpcs || true",
      "@analyze"
    ],
    "test": [
      "phpunit"
    ],
    "test-coverage": [
      "Composer\\Config::disableProcessTimeout",
      "if [ \"$XDEBUG_MODE\" != \"coverage\" ]; then echo \"Run with 'XDEBUG_MODE=coverage composer test-coverage'\"; exit 1; fi;",
      "phpunit --coverage-text --coverage-html tests/_reports/html --coverage-clover tests/_reports/clover.xml --coverage-php tests/_reports/php.cov -d memory_limit=-1"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "scripts-descriptions": {
    "test": "Run PHPUnit tests",
    "test-coverage": "Run PHPUnit tests with coverage. Use 'XDEBUG_MODE=coverage composer test-coverage' to run"
  }
}
